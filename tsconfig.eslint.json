{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.*",
    ".eslintrc.*",

    // Root-level TS/JS
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",

    // Next types generated during build
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "dist", "build", "coverage", "playwright-report"]
}
