{
  "name": "itzthepools",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "start:prod": "npm run start",
    "clean": "rimraf .next .cache node_modules/.cache",
    "rebuild": "npm run clean && npm run build",
    "prod": "npm run rebuild && npm run start:prod",
    "typecheck": "tsc --noEmit",
    "lint": "next lint",
    "lint:all": "eslint \"src/**/*.{ts,tsx,js,jsx}\" \"lib/**/*.{ts,tsx,js,jsx}\" || true",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx,js,jsx}\" \"components/**/*.{ts,tsx,js,jsx}\" \"lib/**/*.{ts,tsx,js,jsx}\"",
    "e2e": "npm run test:e2e",
    "e2e:ui": "playwright test --ui",
    "e2e:install": "playwright install --with-deps",
    "test": "npm run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:invite": "playwright test tests/e2e/invite-flow.spec.ts --workers=1",
    "test:e2e:invite:local": "cross-env BASE_URL=http://localhost:3001 playwright test tests/e2e/invite-flow.spec.ts --workers=1",
    "test:e2e:create-league": "playwright test tests/e2e/create-league.spec.ts --workers=1",
    "test:e2e:create-league:local": "cross-env BASE_URL=http://localhost:3001 playwright test tests/e2e/create-league.spec.ts --workers=1",
    "test:e2e:bulk-invites": "playwright test tests/e2e/bulk-invites.spec.ts --workers=1",
    "test:e2e:my-leagues": "playwright test tests/e2e/my-leagues.spec.ts --workers=1",
    "test:e2e:local": "cross-env BASE_URL=http://localhost:3001 playwright test",
    "test:e2e:all:local": "cross-env BASE_URL=http://localhost:3001 playwright test --workers=1",
    "e2e:show-report": "playwright show-report",
    "test:e2e:ci": "playwright test --reporter=line --workers=1",
    "ci:e2e:devserver": "concurrently -k -s first \"next dev -p 3001\" \"wait-on tcp:3001 && cross-env E2E_REAL=1 BASE_URL=http://localhost:3001 playwright test --reporter=line --workers=1\""
  },
  "dependencies": {
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.57.4",
    "lucide-react": "^0.544.0",
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.25.9",
    "@playwright/test": "^1.47.2",
    "@types/node": "20.14.9",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.32",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "8.4.41",
    "prettier": "^2.8.8",
    "rimraf": "^6.0.1",
    "supabase": "^2.40.7",
    "tailwindcss": "3.4.10",
    "typescript": "^5.5.4",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --cache --cache-location .cache/eslint --fix"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
